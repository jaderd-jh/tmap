{
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.1.2",
  "description": "天地图 jsapi 4.0 的 monorepo",
  "author": "jaderd-jh",
  "license": "MIT",
  "homepage": "https://github.com/jaderd-jh/tmap",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaderd-jh/tmap.git"
  },
  "bugs": {
    "url": "https://github.com/jaderd-jh/tmap/issues"
  },
  "scripts": {
    "build": "pnpm -r build",
    "check:lint": "oxlint && eslint --cache .",
    "fix:lint": "oxlint --quiet --fix && eslint --cache --quiet --fix .",
    "check:fmt": "biome check .",
    "fix:fmt": "biome check --apply .",
    "check:type": "pnpm -r check:type",
    "check:staged": "lint-staged",
    "pre-commit": "run-s check:type check:staged",
    "prepare": "npx simple-git-hooks",
    "update:latest": "pnpm update --latest -i -r",
    "update:dedupe": "pnpm dedupe"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.0",
    "@arethetypeswrong/cli": "^0.15.3",
    "@biomejs/biome": "^1.7.3",
    "@tsconfig/node20": "^20.1.4",
    "csstype": "^3.1.3",
    "eslint": "^9.2.0",
    "eslint-plugin-format": "^0.1.1",
    "eslint-plugin-oxlint": "^0.2.9",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "oxlint": "^0.3.5",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pre-commit"
  },
  "lint-staged": {
    "*": ["oxlint --quiet --fix", "eslint --cache --quiet --fix", "biome check --apply --no-errors-on-unmatched"]
  },
  "$schema": "https://json.schemastore.org/package.json"
}
